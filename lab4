#include <iostream>
#include <cstdlib>

using namespace std;

unsigned int fib(int n);

unsigned int fib(unsigned int n)
{
    cin >> n;
    if(n == 0) return 0;
    if(n == 1) return 1;
    return fib(n-1)+fib(n-2);
}

int main()
{
    int menu;
    cout << "Menu:"<< endl;
    cout << "Interative - 1"<<endl;
    cout << "Recursive - 2"<<endl;
    cout << "Zamknij - 3"<<endl;
    cin >> menu;
switch (menu)
{
case 1:
    {
    int ilosc;

    cout << "Podaj ile wyrazow wypisac:" << endl;
    cin >> ilosc;

    for (int i = 0; i<=ilosc; i++)
        cout << fib(i) << ", ";

    system("PAUSE >nul");
    break;
}
    case 2:
    {
break;
    }
    case 3:
        {
system("pause");
        }
        break;
        }

    return 0;

}
