#include <iostream>
#include <cstdlib>
#include <ctime>

using namespace std;


int main()
{
	srand((int)time(0));
	int i = 0;
	int arr[10];
	int min, max;
	double srednia, suma;
	max = 0;
	min = 100;
	while (i < 10) {
		arr[i] = rand() % 100;
		i++;
	}

	for (int j = 0; j < 10; j++)//tworzy
	{

		cout << "\t\t\tValue at " << j << " Index: " << arr[j] << endl;
	}
	cout << endl;

	int temp;
	for (int i2 = 0; i2 < 9; i2++)//sortuje
	{
		for (int j = 0; j < 9; j++)
		{
			if (arr[j] > arr[j + 1])
			{
				temp = arr[j];
				arr[j] = arr[j + 1];
				arr[j + 1] = temp;
			}
		}
	}

	cout << "  Sorted Array is: " << endl;
	for (int i3 = 0; i3 < 10; i3++)//wyswietla posortowane
	{
		cout << "\t\t\tValue at " << i3 << " Index: " << arr[i3] << endl;
	}
	for (int i = 0; i < 10; i++)//min i max
	{
		if (arr[i] > max)
			max = arr[i];

		if (arr[i] < min)
			min = arr[i];
	}
	suma = 0;
	for (int i = 0; i < 10; i++)
		suma += arr[i]; // suma


	cout << "Wartość min: " << min << endl;
	cout << "Wartość max: " << max << endl;
	cout << "Suma: " << suma << endl;
	cout << "Średnia: " << suma / 10 << endl;

	return 0;
}
