cout <<"średnia: "<< average << endl;
cout <<"Minimalna wartość: "<< getMinimum(array, size) << endl;
cout <<"Maxymalna wartość: "<< getMaximum(array, size) << endl;
cout << "Czy chcesz zapisac?y/n"<<endl;
