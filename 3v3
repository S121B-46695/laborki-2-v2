using namespace std;

class Array
{
    public:
    int generate
    int getindex(int i)
    float getAverage()
    int getMinimum()
    int getMaximum()
    sort()
    print() 
    Array()
    Array (int size)
};
Array::Array()

int *generate(int size)
{
int maxValue = 99;
int *array;
array = new int[size];
for (int i = 0; i < size; i++)
{
array[i] = rand() % (maxValue + 1);
}
return array;
}

void print(int*array, int size)
{
for (int i = 0; i < size; i++)
cout << array[i] << endl;
}
int*sort(int*array, int size)
{
sort(array, array + size);
return array;
}
void load(int *array, int size)
{
string wczytaj;
fstream wczytaj2;
wczytaj2.open("lab3_2.txt", ios::in);
getline(wczytaj2, wczytaj);
wczytaj2.close();
cout<< wczytaj ;
}
int save(int* array, int size)
{
ofstream myfile("lab3_2.txt");
if (myfile.is_open())
{
for (int i = 0; i < size; i++)
myfile << array[i] << " ";
cout << "Zapisane" << endl;
myfile.close();

}
else cout << "Unable to open file";
}

float getAverage(int*array, int size)
{
int suma = 0;
float average;
for (int i = 0; i < size; i++)
suma += array[i];
average = static_cast<float>(suma) / static_cast<float>(size);
return average;
}

int getMinimum(int*array, int size) {
return *min(array, array + size-1);
}

int getMaximum(int*array, int size) {
return *max(array, array + size-1);
}

