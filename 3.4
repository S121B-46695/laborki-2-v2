using namespace std;

class Array
{
private:
	vector<int> vctr;
	int size;
	int suma = 0;

public:

	Array()
	{
		cout << "Podaj rozmiar tablicy" << endl;
		cin >> size;
		generate();
	}

	Array(int rozmiar)
	{
		size = rozmiar;
		generate();
	}


	void* generate()
	{
		for (int i = 0; i < size; i++)
		{
			vctr.push_back(rand() % 100);
		}
		return 0;
	}

	void print()
	{
		for (int vector : vctr)
		{
			cout << vector << " ";
		}
		cout << "\n";
	}


	void* sortArray()
	{
		sort(vctr.begin(), vctr.end());
		return 0;
	}

	void maximum()
	{
		int tab2 = vctr[size - 1];
		cout << "max: " << tab2 << endl;
	}

	void minimum()
	{
		int tab1 = vctr[0];
		cout << "min: " << tab1 << endl;
	}

	void average()
	{
		float average;
		for (int vector : vctr)
		{
			suma += vector;
		}
		average = suma * 1.0 / size;
		cout << "Srednia: " << average << endl;
	}

	void getIndex(int index)
	{
		cout << vctr[index];
	}

};


int main()
{
	srand(time(NULL));
	Array array1;
	array1.print();
	array1.sortArray();
	array1.print();

	array1.maximum();
	array1.minimum();
	array1.average();

	return 0;
}
